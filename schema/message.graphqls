type Message {
    chatId: ID!
    userId: ID!
    text: String!
    type: String!
}

extend type Query {
    messages: [Message]
}

input postMessageInput {
    chatId: ID!
    userId: ID!
    text: String!
}

extend type Mutation {
    postMessage(input: postMessageInput!): Message!
}

input MessageSubscriptionInput {
    chatId: ID!
    userId: ID!
}

extend type Subscription {
    getMessage(input: MessageSubscriptionInput!): Message!
}
