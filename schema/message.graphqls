type Message {
    chatId: ID!
    userId: ID!
    text: String!
    type: String!
}

extend type Query {
    messages: [Message]
}

input MessageInput {
    chatId: ID!
    userId: ID!
    text: String!
}

extend type Mutation {
    postMessage(input: MessageInput!): Message!
}

extend type Subscription {
    messagePosted(chatId: ID!): Message!
}
